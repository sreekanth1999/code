//pattern1

#include <stdio.h>
#include <stdlib.h>
void pattern(int);
int main(){
    int n;
    scanf("%d",&n);
    pattern(n);
return 0; }

void pattern(int n){ 
	
	for(int i=0;i<n;i++){			//first half
		for (int j=n;j>i;j--)  	  printf("*");//stars
		for (int j=0;j<2*i;j++)   printf(" ");	//spaces	
		for (int j=n;j>i;j--)	  printf("*");	//stars
			
		printf("\n");}
		
		for(int i=0;i<n;i++){			//second half
		for (int j=0;j<=i;j++)	        printf("*");  		//stars
		for (int j=2*(n-1);j>2*i;j--)   printf(" ");	//spaces
		for (int j=0;j<=i;j++)        	printf("*");	//stars
			
		printf("\n");}
		
}


